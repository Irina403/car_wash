extends _layout
block content_block
	section.main
		.section_in 
			h1 Лучшее оборудование для автомоек с доставкой в ваш регион!
			.main__btn.btn-all 
				a(href="#")  Скачать прайс-лист

	.section_in 
		.advantages-block 
			ul.advantages-block__list
				-for(i = 1; i < 5; i++)
					- title = ['' , 'Ассортимент' , 'Сервис' , 'Помощь' , 'Скидки']
					- text = ['' , 'Большой выбор товаров для автомоек, включая химию' , 'Качественный сервис и грамотные менеджеры' , 'Помощь в выборе товаров и получении информации о них' , 'Скидки и бонусы при регулярных покупках в нашем магазине']
					- src = 'i/icons/i-' + i + '.svg'
					li.advantages-block__item
						.advantages-block__img
							img(src=`${src}`, alt="icons")
						p.advantages-block__item-title!=title[i]
						p.advantages-block__item-text!=text[i]

	.section_in 	
		.offer-block 
			.offer-block__row 
				.offer-block__col 		
					img(src="i/img-block3.jpg", alt="img-block3")
				.offer-block__col.offer-block__col-right 
					h2.title-block Обратитесь к нам <br> <span> прямо сейчас </span> за консультацией
					.offer-block__text 
						p Мы практикуем индивидуальный подход к каждому клиенту. Каждый заказ для нас – это отдельная задача, для которой мы внимательно прорабатываем оптимальное решение.
						p Мы всегда готовы помочь с выбором лучшего оборудования для автомоек, которое подойдет именно для вашего дела.
						.offer-block__button.btn-all 
							a(href="#")  Оставить заявку
					
					.offer-block__contacts
						.offer-block__contacts-item 
							img(src="i/icons/i-check.svg", alt="") 
							p Скачайте весь прайс по 
								a(href="#")  ссылке
						.offer-block__contacts-item 
							img(src="i/icons/i-check.svg", alt="") 
							p Оставьте заявку или позвоните по телефону 
								a(href="tel:+78632066888")  8 (863) 20-66-888
	.discounts
